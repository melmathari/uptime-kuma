# Redis Queue Configuration for StatusCobra V2 Scaling
# Copy this to .env and modify as needed

# Enable Redis Queue Mode (set to 'true' for scaling to thousands of monitors)
ENABLE_QUEUE_MODE=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue Performance Settings
QUEUE_CONCURRENCY=50        # Number of monitors to process concurrently
QUEUE_MAX_JOBS=1000        # Max jobs per minute (rate limiting)

# Existing StatusCobra Configuration
NODE_ENV=production
